{
  "tasks": [
    {
      "type": "shell",
      "label": "Compile & Run DSA",
      "command": "ulimit",
      "args": [
        "-f",
        "$((1*1024))",
        "&&",
        "/usr/bin/g++",
        "-Werror",
        "-Wall",
        "-fsanitize=address",
        "-fstack-protector-all",
        "-std=c++20",
        "-g",
        "${file}",
        "-I",
        "${workspaceFolder}/inc",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.out",
        "&&",
        "${fileDirname}/${fileBasenameNoExtension}.out",
        "&&",
        "sleep",
        "2",
        "&&",
        "rm",
        "-f",
        "${fileDirname}/${fileBasenameNoExtension}.out",
        "&&",
        "rm",
        "-rf",
        "${fileDirname}/${fileBasenameNoExtension}.out.dSYM"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}